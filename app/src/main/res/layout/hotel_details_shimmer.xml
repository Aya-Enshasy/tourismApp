<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details_activities.HotelsDetails">




    <ImageView
        android:id="@+id/hotel_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:scaleType="fitXY"
        android:background="#B5B5B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        android:background="@drawable/hotel_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <View
            android:id="@+id/view12"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_110sdp"
            android:background="#001327"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView43"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/hotel_name"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/montserrat"
            android:background="#B5B5B5"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ratetv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_below="@+id/hotel_name"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imgv"
            android:layout_toRightOf="@+id/imgv"
            android:background="#B5B5B5"
            android:fontFamily="monospace"
            android:textSize="@dimen/_7ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/location"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_below="@+id/hotel_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="monospace"
            android:background="#B5B5B5"
            android:textSize="@dimen/_7ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/det"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_below="@+id/hotel_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:fontFamily="@font/montserrat"
            android:background="#B5B5B5"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/details"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/det"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="#B5B5B5"            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/available_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserrat"
            android:background="#B5B5B5"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/available_day"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#B5B5B5"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/available_day"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:background="#B5B5B5"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="@dimen/_9sdp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_below="@+id/available_day"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@+id/imageButton1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:background="#B5B5B5"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"

            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="@dimen/_9sdp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/available_day"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/imageButton2"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:background="#B5B5B5"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="@dimen/_9sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView24"
            android:layout_width="@dimen/_40sdp"
            android:background="#B5B5B5"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/montserrat"

            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view25"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton1"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/textView24"
            android:layout_toRightOf="@+id/textView24"
            android:background="#B5B5B5"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView26"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/text_view25"
            android:layout_toRightOf="@+id/text_view25"
            android:background="#B5B5B5"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/_9ssp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView27"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/textView26"
            android:layout_toRightOf="@+id/textView26"
            android:background="#B5B5B5"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/_9ssp" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_below="@+id/textView26"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_90sdp"
            android:layout_marginRight="@dimen/_90sdp"
            android:background="#B5B5B5"
            android:fontFamily="@font/montserrat"
           />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>